<Window x:Class="GameBracketManager.ManageBracket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBracketManager"
        mc:Ignorable="d"
        Title="ManageBrackets" Height="500" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Margin="10"/>
        <Button Grid.Row="1" Content="Add Bracket" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="32" VerticalAlignment="Bottom" Click="Click_Add_Bracket"/>
        <Button Grid.Row="1" Content="Edit Bracket" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="32" VerticalAlignment="Bottom" Click="Click_Edit_Bracket"/>

    </Grid>
</Window>
