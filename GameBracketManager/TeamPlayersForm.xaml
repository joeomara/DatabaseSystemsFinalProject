<Window x:Class="GameBracketManager.TeamPlayersForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBracketManager"
        mc:Ignorable="d"
        Title="TeamPlayersForm" Height="500" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="dgPlayers" Grid.Row="0" Margin="10" />
        <Button Grid.Row="1" Content="Add Team" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="32" VerticalAlignment="Bottom"/>
        <Button Grid.Row="1" Content="Edit Team" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="32" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
